escape ^Tt
bell_msg "^G"
bind c screen
bind l windowlist
bind n next
bind p prev
bind K kill

autodetach on
#startup_message on
startup_message off

defscrollback 50000
defmonitor on
defencoding utf8
defkanji utf8
encoding utf8 utf8
vbell off

#caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk}[%0`] [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk}[%0`] [%l] %{=b wk}%y/%m/%d %{=b wr}%c"
backtick 0 0 0 echo ${ttyname}

termcapinfo xterm* ti@:te@
term xterm-256color

# フルスクリーンプログラムを別画面で表示させるオプション
# less とか終了したあとに画面に表示が残らなくなる
#altscreen on

# Macからマウスでスクロールするための設定
termcapinfo xterm* ti@:te@

# ログファイルの設定
#logfile on
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
deflog on

# iterm2 でvimのcolorがおかしい
# 256色の設定
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'
defbce "on"
